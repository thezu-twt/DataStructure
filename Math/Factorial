// non-recursive

int Fac (int n)
{
 if (n==0) return 1;
 else //n>0
   {
     int s=1 ; i;
     for ( i=1; i<=n; i++)
       s=s*i;
       return s;
   }
}



//recursive
/* 
def:
n! =1, if (n=0) //初值，終止條件
   =(n-1)!*n, if(n>0)
*/

int Fac (int n)
{
  if (n==0) return 1;
  else //n>0
    return Fac (n-1) * n;
}


//recursive for sum(n) = 1+2+3+…+n, and sum(0)=0

int sum (int n)
{
  if (n==0) return 0;
  else return sum (n-1) + n;
}
 
 
 
 
 
 
 
 
